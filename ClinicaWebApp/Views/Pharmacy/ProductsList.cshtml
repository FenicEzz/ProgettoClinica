@model ClinicaWebApp.Models.ProductsProviderViewModel

<h1>Lista prodotti di @Model.Provider.Name</h1>
<hr />

@if (Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Descrizione
                </th>
                <th>
                    Azioni
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="ProductDetail" asp-route-id="@item.Id">Dettaglio</a> |
                        <a class="btn btn-danger" asp-action="DeleteProduct" asp-route-id="@item.Id">Rimuovi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>Non ci sono prodotti per questo fornitore!</h4>
}

<div>
    <a class="btn btn-primary my-3" asp-action="Index">Back to List</a>
</div>